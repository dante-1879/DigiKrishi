{
    "compilerOptions": {
      "lib": ["es5", "es6"],
      "target": "ES2024",
      "module": "commonjs",
      "moduleResolution": "node",
      "types": ["node"],
      "outDir": "./build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "downlevelIteration": true,
      "sourceMap": true,
      "strict": false,
      "noImplicitAny": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true
    },
    "include": ["./src/**/*.ts", "./src/**/*.json"],
    "exclude": ["node_modules", "./dist"],
    "baseUrl": "."
  }